<div class="container">
        <div class="col-md-6 m-auto">
                <div class="card card-body">
                  <h1 class="text-center mb-3">
                     Edit Post
                  </h1>
                  <form action="/edit_post/<%= posts[0].post_id %>" method="POST">
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input
                        type="text"
                        id="title"
                        name="title"
                        class="form-control"
                        value="<%=posts[0].title %>"
                       
                      />
                    </div>
                    <div class="form-group">
                      <label for="Content">Content</label>
                      <textarea
                      rows="6" cols="50"
                        id="content"
                        name="content"
                        class="form-control"
                      ><%=posts[0].content %></textarea>
                    </div>
                    <div class="form-group">
                            <label for="date">Date Of Publish</label>
                            <input
                              type="date"
                              id="date"
                              name="date"
                              class="form-control"
                              value="<%=posts[0].date_y%>"
                            />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                      Edit Post
                    </button>
                  </form>
                  <p class="lead mt-4">My Dashboard <a href="/posts/dashboard">Dashboard</a></p>
                  <p class="lead mt-4">back To Home page? <a href="/">Home</a></p>
                </div>
              </div>
</div>
</body>
</html>